<Window x:Class="InventoryTrackerFrontend.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryTrackerFrontend"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="300">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="10" VerticalAlignment="Top" Width="264">
            <Label x:Name="usernameLabel" Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <TextBox x:Name="usernameTextBox" TextWrapping="Wrap"/>
            <Label x:Name="passwordLabel" Content="Password" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <PasswordBox x:Name="passwordBox"/>
        </StackPanel>
        <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="76" IsDefault="True" Margin="109,0,0,21.4" Click="loginButton_Click"/>
        <Button x:Name="exitButton" Content="Exit" HorizontalAlignment="Left" Margin="204,0,0,21.4" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="exitButton_Click"/>
    </Grid>
</Window>
