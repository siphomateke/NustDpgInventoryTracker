<Window x:Class="InventoryTrackerFrontend.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:InventoryTrackerFrontend" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="d"
    Title="Inventory Tracker" Height="450" Width="800" Loaded="Window_Loaded"
    SizeToContent="WidthAndHeight" 
    MaxWidth="1200"
    >
    <Grid>
        <Frame x:Name="_mainFrame"></Frame>
        <xctk:BusyIndicator x:Name="busyIndicator" IsBusy="False" BusyContent="Loading..." />
    </Grid>
</Window>
